@page "/student/{StudentId:int}"
@using Crawler.Services
@inject IStudentService StudentService
@inject NavigationManager navigationManager

<h3>Student's details</h3>

<div class="row">
    <div class="col-md-2 d-flex justify-content-center">
        First name:
    </div>
    <div class="col-md-2 d-flex justify-content-center border border-dark">
        @StudentService.GetStudent(StudentId).FirstName
    </div>
    <div class="col-md-2 d-flex justify-content-center">
        Avatar:
    </div>
    <div class="col-md-2 d-flex justify-content-center border border-dark">
        <span>@StudentService.GetStudent(StudentId).Avatar</span>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-6  d-flex justify-content-center">
                Last name:
            </div>
            <div class="col-md-6 d-flex justify-content-center border border-dark">
                @StudentService.GetStudent(StudentId).LastName
            </div>
        </div>
        <div class="row">
            <div class="col-md-6  d-flex justify-content-center">
                Birthdate:
            </div>
            <div class="col-md-6 d-flex justify-content-center border border-dark">
                @StudentService.GetStudent(StudentId).Birthdate.ToString("MM/dd/yyyy")
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 d-flex justify-content-center">
                Studies:
            </div>
            <div class="col-md-6 d-flex justify-content-center border border-dark">
                @StudentService.GetStudent(StudentId).Studies
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-6 d-flex justify-content-center"></div>
            <div class="col-md-6 d-flex justify-content-center">
                <img src="@StudentService.GetStudent(StudentId).Avatar" alt="avatar" width="100" height="100"/>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-2 d-flex justify-content-center">
        <button type="button" class="btn btn-primary" @onclick="@(OnClick)">Return</button>
    </div>
</div>

@code {

    [Parameter]
    public int StudentId { get; set; }

    private void OnClick()
    {
        navigationManager.NavigateTo("/students");
    }

}